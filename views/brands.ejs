<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Brands | AutoNexus</title>
    <link rel="icon" type="image/png" href="/images/favicon.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/stylesheets/brands.css">

  </head>
  <body>
    <!-- Navbar -->
    <%- include('partials/navbar') %>

    <!-- Hero Section -->
    <section class="brands-hero mb-5">
      <div class="brands-hero-overlay"></div>
      <div class="brands-hero-content container py-5">
        <h1>Explore Our Brands</h1>
        <p class="lead mt-3" style="color: #e0e7ff">
          Browse the best car brands and models available at AutoNexus.
        </p>
      </div>
    </section>

    <!-- Brand Gallery -->
    <div class="container brand-gallery-section">
      <h2 class="text-center mb-4 fw-bold" style="letter-spacing: 1px">
        Popular Brands
      </h2>
      <div class="row g-4 justify-content-center">
        <% brands.forEach(function(brand) { let brandName =
        brand.company.toLowerCase(); let displayName =
        brand.company.toUpperCase(); let img = brand.logo ||
        "/images/default.jpg" %>
        <div class="col-12 col-sm-6 col-md-4 col-lg-4">
          <div class="card brand-card h-100">
            <img
              src="<%= img %>"
              class="card-img-top"
              alt="<%= displayName %> Logo"
              style="
                object-fit: cover;
                width: 100%;
                height: 250px;
              "
            />

            <div class="card-body text-center">
              <h5 class="card-title"><%= displayName %></h5>
              <a
                href="/<%= brandName %>"
                class="btn btn-outline-primary btn-block"
              >
                View Cars
              </a>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <!-- Footer -->
    <%- include('partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
