<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>
      <%= companyName.toUpperCase() %> Cars | RPMZone
    </title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/png" href="/images/favicon.png" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/stylesheets/companypage.css" />
  </head>
  <body>
    <!-- Navbar -->
    <%- include('partials/navbar') %>

    <!-- Brand Hero Section -->
    <section class="brand-hero">
      <div class="brand-hero-box text-center">
        <h1><%= companyName.toUpperCase() %> Cars</h1>
        <p>
          Explore the latest <%= companyName.toUpperCase() %> models available at RPMZone
        </p>
      </div>
    </section>

    <!-- Car Gallery -->
    <div class="container brand-section">
      <h2 class="text-center mb-4 fw-bold" style="letter-spacing: 1px">
        Available <%= companyName.toUpperCase() %> Cars
      </h2>
      <div class="row g-4 justify-content-center">
        <% result.forEach(car => { %>
        <div class="col-12 col-sm-6 col-md-4 col-lg-4">
          <div class="card car-card h-100">
            <img
              src="<%= car.images?.[0]?.src || '/images/default.jpg' %>"
              class="card-img-top"
              alt="<%= car.carName %>"
            />
            <div class="card-body text-center">
              <h5 class="card-title"><%= car.carName %></h5>
              <a
                href="/<%= companyName %>/<%= car.route %>"
                class="btn btn-outline-primary btn-block"
              >
                Details
              </a>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <!-- Footer -->
    <%- include('partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
